<div class="row">
    <div class="col-md-12">

        <h2>{{viewData.vakeel.firstName}} {{ viewData.vakeel.lastName}} - Vakeel: {{ viewData.vakeel.vakeelNum}}</h2>
        <hr />
        <form method="post" action="/vakeel/update">
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text"
                                value="{{viewData.vakeel.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text"
                                value="{{viewData.vakeel.lastName}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" id="email" name="email" type="text"
                                value="{{viewData.vakeel.email}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="contact">Contact:</label>
                            <input class="form-control" id="contact" name="contact" type="text" value="{{viewData.vakeel.contact}}"
                             />
                        </div>
                    </div>
                </div>
                </div>


            </fieldset>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="expertise">Expertise</label>
                    
                        {{#if viewData.expertises}}
                         <select class="form-control" name="expertise" id="expertise">

                                {{#each viewData.expertises}} 

                                <option value={{expertiseId}} {{#if selected}} selected {{/if}} >{{expertiseName}}</option>
                         
                                {{/each}}

                                
                                {{else}}
                                <div>No Expertises</div>
                                {{/if}}
                            
                            </select>
                            
                        </div>
                    </div>
                </div>

            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Vakeel" /><br /><br /><br />
        </form>
    </div>
</div>