<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>Add Vakeel</h2>

            <br />

            <form method="post" action="/vakeels/add">

                <fieldset>
                    <legend>Personal Information</legend>
                    <p hidden >
                    <input hidden readonly class="form-control" id="userName" name="userName" value={{userData.userName}} type="text" />
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstName">First Name:</label>
                                <input class="form-control" id="firstName" name="firstName" type="text" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="last_name">Last Name:</label>
                                <input class="form-control" id="lastName" name="lastName" type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input readonly class="form-control" value={{userData.email}} id="email" name="email" type="email" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="contact">Contact:</label>
                                <input class="form-control" id="contact" name="contact" type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="row">    

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="expertise">Expertise</label>
                                    
                                    {{#if expertises}}
                                        <select class="form-control" name="expertise" id="expertise">

                                            {{#each expertises}} 

                                            <option value={{expertiseName}}>{{expertiseName}}</option>
                                        
                                            {{/each}}

                                            
                                            {{else}}
                                            <div>No Expertises</div>
                                            {{/if}}
                                        
                                        </select>
                            </div>
                        </div>
                    </div>             
                </fieldset>

                <hr />

                <input type="submit" class="btn btn-primary pull-right" value="Add Vakeel" /><br /><br /><br />

            </form>
        </div>
    </div>
</div>
